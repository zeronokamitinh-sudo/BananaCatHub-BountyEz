-- [[ BANANA CAT OVERLAY - FIXED DISPLAY - ONLY CODE ]] --

local Player = game.Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local RunService = game:GetService("RunService")
local StatsService = game:GetService("Stats")

-- 1. Xóa bản cũ để tránh chạy đè nhiều cái
for _, oldGui in pairs(PlayerGui:GetChildren()) do
    if oldGui.Name == "BananaCatOverlay" then
        oldGui:Destroy()
    end
end

-- 2. Tạo ScreenGui với DisplayOrder cực cao để che GUI cũ
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BananaCatOverlay"
screenGui.Parent = PlayerGui
screenGui.IgnoreGuiInset = true 
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 2147483647 

-- 3. Khung nền đen đặc
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(1, 0, 1, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- 4. Nút Bật/Tắt (Toggle Button)
local toggleBtn = Instance.new("TextButton")
toggleBtn.Name = "ToggleButton"
toggleBtn.Size = UDim2.new(0, 120, 0, 40)
toggleBtn.Position = UDim2.new(0.5, -60, 0, 40) 
toggleBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
toggleBtn.TextColor3 = Color3.fromRGB(255, 255, 0)
toggleBtn.TextSize = 18
toggleBtn.Font = Enum.Font.SourceSansBold
toggleBtn.Text = "HIDE UI"
toggleBtn.ZIndex = 100
toggleBtn.Parent = screenGui

local isHidden = false
toggleBtn.MouseButton1Click:Connect(function()
    isHidden = not isHidden
    mainFrame.Visible = not isHidden
    toggleBtn.Text = isHidden and "SHOW UI" or "HIDE UI"
    toggleBtn.BackgroundColor3 = isHidden and Color3.fromRGB(150, 0, 0) or Color3.fromRGB(30, 30, 30)
    
    local touchGui = PlayerGui:FindFirstChild("TouchGui")
    if touchGui then touchGui.Enabled = isHidden end
end)

-- 5. Container dùng UIListLayout để KHÔNG BỊ ĐÈ CHỮ
local centerContainer = Instance.new("Frame")
centerContainer.Size = UDim2.new(0.9, 0, 0.6, 0)
centerContainer.Position = UDim2.new(0.5, 0, 0.5, 0)
centerContainer.AnchorPoint = Vector2.new(0.5, 0.5)
centerContainer.BackgroundTransparency = 1
centerContainer.Parent = mainFrame

local layout = Instance.new("UIListLayout")
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.VerticalAlignment = Enum.VerticalAlignment.Center
layout.Padding = UDim.new(0, 10)
layout.Parent = centerContainer

-- 6. Các nhãn thông số
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextSize = 40
title.RichText = true
title.Text = '<font color="rgb(255, 255, 0)">Banana Cat Hub</font> <font color="rgb(255, 50, 50)">Auto Bounty</font>'
title.Parent = centerContainer

local statsLabel = Instance.new("TextLabel")
statsLabel.Size = UDim2.new(1, 0, 0, 70)
statsLabel.BackgroundTransparency = 1
statsLabel.Font = Enum.Font.SourceSans
statsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statsLabel.TextSize = 25
statsLabel.Text = "Loading Data..."
statsLabel.Parent = centerContainer

local extraStatsLabel = Instance.new("TextLabel")
extraStatsLabel.Size = UDim2.new(1, 0, 0, 30)
extraStatsLabel.BackgroundTransparency = 1
extraStatsLabel.Font = Enum.Font.SourceSans
extraStatsLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
extraStatsLabel.TextSize = 22
extraStatsLabel.Text = "FPS: 0 | Ping: 0ms"
extraStatsLabel.Parent = centerContainer

-- 7. Logic cập nhật thông tin (Lấy trực tiếp từ Game)
local startTime = tick()
local initialBounty = 0
local leaderstats = Player:WaitForChild("leaderstats", 15)
local bountyVal = leaderstats and leaderstats:FindFirstChild("Bounty")

if bountyVal then initialBounty = bountyVal.Value end

task.spawn(function()
    while task.wait(0.5) do
        local elapsed = tick() - startTime
        local h = math.floor(elapsed / 3600)
        local m = math.floor((elapsed % 3600) / 60)
        local s = math.floor(elapsed % 60)
        
        local currentBounty = bountyVal and bountyVal.Value or 0
        local earned = currentBounty - initialBounty
        local ping = 0
        pcall(function() ping = math.floor(StatsService.Network.ServerStatsItem["Data Ping"]:GetValue()) end)

        statsLabel.Text = string.format("Total Bounty Earned: %s\nTime Elapsed: %dh:%dm:%ds", tostring(earned), h, m, s)
        extraStatsLabel.Text = string.format("FPS: %d | Players: %d | Ping: %dms", math.floor(1/RunService.RenderStepped:Wait()), #game.Players:GetPlayers(), ping)
    end
end)

-- 8. Tắt TouchGui ban đầu để không vướng màn hình đen
if PlayerGui:FindFirstChild("TouchGui") then PlayerGui.TouchGui.Enabled = false end

-- 9. Load Script chính
task.spawn(function()
    pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/obiiyeuem/vthangsitink/refs/heads/main/BananaCat-BountyEz.lua"))()
    end)
end)
